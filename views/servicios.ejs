<section class="cotizacion">
    <div class="cotizacion-container">
        <div class="imagen">
            <img src="../IMG/Esencia -03.png" alt="Imagen decorativa">
        </div>
        <div class="formulario">
            <h2>Solicita una cotización</h2>
            <form action="#" method="POST">
                <div class="campo">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" required>
                </div>
                <div class="campo">
                    <label for="email">Correo electrónico:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="campo">
                    <label for="telefono">Teléfono:</label>
                    <input type="tel" id="telefono" name="telefono">
                </div>
                <div class="campo">
                    <label for="servicio">Tipo de evento:</label>
                    <select id="servicio" name="servicio" required>
                        <option value="">Selecciona el tipo de evento</option>
                        <option value="Bodas">Bodas</option>
                        <option value="Eventos corporativos">Eventos corporativos</option>
                        <option value="Fiestas temáticas">Fiestas temáticas</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>
                <div class="campo">
                    <label for="mensaje">Mensaje:</label>
                    <textarea id="mensaje" name="mensaje" rows="4" required></textarea>
                </div>
                <button type="submit" class="boton">Enviar solicitud</button>
            </form>
        </div>
    </div>
</section>



